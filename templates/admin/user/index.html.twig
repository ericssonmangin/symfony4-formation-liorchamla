{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5"> Gestion des utilisateurs </h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Pr√©sentation</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="align-middle">
                        <img src="{{ user.avatar }}" alt="{{ user.fullName }}" class="avatar avatar-mini mr-2">
                        {{ user.fullName }}
                    </td>
                    <td class="align-middle">{{ user.email }}</td>
                    <td class="align-middle">{{ user.presentation }}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin.user.edit', {'id': user.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin.user.delete', {'id': user.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
